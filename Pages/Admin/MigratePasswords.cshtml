@page
@model ITInventoryJLS.Pages.Admin.MigratePasswordsModel
@{
    ViewData["Title"] = "Migrate Plaintext Passwords";
}

<h1>Migrate Plaintext Passwords</h1>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success">@Model.StatusMessage</div>
}

@if (!Model.DbPasswordColumnExists)
{
    <div class="alert alert-info">No `DBPassword` column found in the `DBUsers` table. There is nothing to migrate.</div>
}
else if (Model.Users.Count == 0)
{
    <div class="alert alert-info">No users were found with non-empty plaintext passwords.</div>
}
else
{
    <form method="post" asp-page-handler="MigrateSelected">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th></th>
                    <th>Email</th>
                    <th>Plaintext Password (will not be displayed after migration)</th>
                </tr>
            </thead>
            <tbody>
            @for (var i = 0; i < Model.Users.Count; i++)
            {
                var u = Model.Users[i];
                <tr>
                    <td>
                        <input type="checkbox" name="SelectedUserIds" value="@u.DBUserID" />
                    </td>
                    <td>@u.EmailAddress</td>
                    <td>@u.PlainPassword</td>
                </tr>
            }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Migrate Selected</button>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
