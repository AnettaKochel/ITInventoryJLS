@page
@model ITInventoryJLS.Pages.Admin.SetPasswordModel
@{
    ViewData["Title"] = "Set/Rotate Passwords";
}

<h1>Set / Rotate Passwords</h1>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success">@Model.StatusMessage</div>
}

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Set password for a single user</h5>
        <form method="post" asp-page-handler="SetSingle">
            <div class="mb-3">
                <label class="form-label">User</label>
                <select asp-for="SelectedEmail" class="form-select" asp-items="Model.UserOptions">
                    <option value="">-- Select user --</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit">Set Password</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
