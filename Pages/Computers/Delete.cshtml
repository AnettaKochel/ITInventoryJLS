@page
@model ITInventoryJLS.Pages.Computers.DeleteModel
@{
    ViewData["Title"] = "Delete Computer";
}

<h1>Delete Computer</h1>

<h4>Are you sure you want to delete this computer?</h4>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Device Name</dt>
        <dd class="col-sm-10">@Model.Computer.DeviceName</dd>

        <dt class="col-sm-2">Serial Number</dt>
        <dd class="col-sm-10">@Model.Computer.SerialNumber</dd>

        <dt class="col-sm-2">Primary User</dt>
        <dd class="col-sm-10">@Model.Computer.PrimaryUserDisplayName</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Computer.DeviceID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Computers/Index" class="btn btn-secondary">Cancel</a>
</form>
