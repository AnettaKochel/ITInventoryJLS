@page
@model ITInventoryJLS.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete Employee</h1>

<h4>Are you sure you want to delete this Employee?</h4>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.Employee.FullName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Employee.Email</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Employee.Department</dd>

        <dt class="col-sm-2">Office</dt>
        <dd class="col-sm-10">@Model.Employee.OfficeName</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Employee.EmployeeID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Employees/Index" class="btn btn-secondary">Cancel</a>
</form>
