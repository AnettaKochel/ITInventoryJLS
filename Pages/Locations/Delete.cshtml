@page
@model ITInventoryJLS.Pages.Locations.DeleteModel
@{
    ViewData["Title"] = "Delete Location";
}

<h1>Delete Location</h1>

<h4>Are you sure you want to delete this Location?</h4>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Location Name</dt>
        <dd class="col-sm-10">@Model.Location.LocationName</dd>

        <dt class="col-sm-2">Accounting ID</dt>
        <dd class="col-sm-10">@Model.Location.LocationAccountingID</dd>

        <dt class="col-sm-2">Street Address</dt>
        <dd class="col-sm-10">@Model.Location.StreetAddress</dd>

        <dt class="col-sm-2">City / State / Zip</dt>
        <dd class="col-sm-10">@Model.Location.CityStateZip</dd>
        
        <dt class="col-sm-2">FWIP</dt>
        <dd class="col-sm-10">@Model.Location.FWIP</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Location.LocationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Locations/Index" class="btn btn-secondary">Cancel</a>
</form>
