@page
@model ITInventoryJLS.Pages.Phones.DeleteModel
{
    ViewData["Title"] = "Delete Phone";
}

<h1>Delete Phone</h1>

<div class="alert alert-warning">Are you sure you want to delete this phone?</div>

<dl class="row">
    <dt class="col-sm-3">Serial Number</dt>
    <dd class="col-sm-9">@Model.Phone.SerialNumber</dd>

    <dt class="col-sm-3">Manufacturer</dt>
    <dd class="col-sm-9">@Model.Phone.Manufacturer</dd>

    <dt class="col-sm-3">Model</dt>
    <dd class="col-sm-9">@Model.Phone.Model</dd>

    <dt class="col-sm-3">User Assigned</dt>
    <dd class="col-sm-9">@Model.Phone.UserAssigned</dd>

    <dt class="col-sm-3">Deployment Location</dt>
    <dd class="col-sm-9">@Model.Phone.DeploymentLocation</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Phone.PhoneID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Phones/Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
