@page
@model ITInventoryJLS.Pages.Phones.IndexModel
@{
    ViewData["Title"] = "Phones";
}

<h1>Phones</h1>

<a asp-page="/Phones/Create" class="btn btn-primary mb-3">Add New</a>
<a asp-page="./Index" asp-page-handler="ExportCsv" asp-route-ManufacturerFilter="@Model.ManufacturerFilter" asp-route-MACFilter="@Model.MACFilter" asp-route-DeploymentLocationFilter="@Model.DeploymentLocationFilter" asp-route-UserAssignedFilter="@Model.UserAssignedFilter" class="btn btn-outline-success mb-3 ms-2">Export CSV</a>

<form method="get" class="mb-3">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <input name="ManufacturerFilter" value="@Model.ManufacturerFilter" class="form-control" placeholder="Manufacturer" />
        </div>
        <div class="col-auto">
            <select name="MACFilter" class="form-select">
                <option value="">All MACs</option>
                @foreach (var mac in Model.MACOptions)
                {
                    <option value="@mac" selected="@((Model.MACFilter ?? string.Empty).Trim() == mac ? "selected" : null)">@mac</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <select name="DeploymentLocationFilter" class="form-select">
                <option value="">All Locations</option>
                @foreach (var loc in Model.DeploymentLocationOptions)
                {
                    <option value="@loc" selected="@((Model.DeploymentLocationFilter ?? string.Empty).Trim() == loc ? "selected" : null)">@loc</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <select name="UserAssignedFilter" class="form-select">
                <option value="">All Users</option>
                @foreach (var u in Model.UserAssignedOptions)
                {
                    <option value="@u" selected="@((Model.UserAssignedFilter ?? string.Empty).Trim() == u ? "selected" : null)">@u</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-page="/Phones/Index" class="btn btn-outline-secondary ms-2">Clear</a>
        </div>
    </div>
</form>

@if (Model.Phones.Count == 0)
{
    <p>No phones found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>PhoneID</th>
                <th>SerialNumber</th>
                <th>Manufacturer</th>
                <th>Model</th>
                <th>Condition</th>
                <th>UserAssigned</th>
                <th>MACAddress</th>
                <th>DeploymentLocation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model.Phones)
        {
            <tr>
                <td>@p.PhoneID</td>
                <td>@p.SerialNumber</td>
                <td>@p.Manufacturer</td>
                <td>@p.Model</td>
                <td>@p.Condition</td>
                <td>@p.UserAssigned</td>
                <td>@p.MACAddress</td>
                <td>@p.DeploymentLocation</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-page="/Phones/Edit" asp-route-id="@p.PhoneID" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-page="/Phones/Delete" asp-route-id="@p.PhoneID" class="btn btn-sm btn-danger ms-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
