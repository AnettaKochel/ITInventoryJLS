@page
@model ITInventoryJLS.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Wap";
}

<h1>Delete Wap</h1>

<h4>Are you sure you want to delete this WAP?</h4>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Serial Number</dt>
        <dd class="col-sm-10">@Model.Waps.SerialNumber</dd>

        <dt class="col-sm-2">Manufacturer</dt>
        <dd class="col-sm-10">@Model.Waps.Manufacturer</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Waps.Model</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Waps.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Products/Index" class="btn btn-secondary">Cancel</a>
</form>
