<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITInventoryJLS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ITInventoryJLS.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex flex-column align-items-center" asp-area="" asp-page="/Index">
                    <img src="~/images/JLSLogo.png" alt="JLS Logo" class="navbar-logo img-fluid" />
                    <span class="brand-text d-none d-sm-block fw-bold fs-6 mt-1 text-center">IT Inventory</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-2">


                        <li class="nav-item">
                            <a class="nav-link text-dark px-2" asp-area="" asp-page="/Introduction">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark px-2" asp-area="" asp-page="/Products/Index">Waps</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark px-2" asp-area="" asp-page="/Locations/Index">Locations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark px-2" asp-area="" asp-page="/Employees/Index">Employees</a>
                        </li>   
                        <li class="nav-item">
                            <a class="nav-link text-dark px-2" asp-area="" asp-page="/Computers/Index">Computers</a>
                        </li>   
                        <li class="nav-item">
                            <a class="nav-link text-dark px-2" asp-area="" asp-page="/Phones/Index">Phones</a>
                        </li>   
                        
                        <!-- SQL Query page removed -->
                        @* Show Admin menu only to users in Admin role *@
                        @{
                            var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
                            var isAdmin = isAuthenticated && (User?.IsInRole("Admin") ?? false);
                            var isStandard = isAuthenticated && ((User?.IsInRole("StandardUser") ?? false) || ((User?.FindFirst("UserRights")?.Value ?? "").Split(',').Select(s => s.Trim()).Contains("StandardUser")));
                        }

                        @if (isAuthenticated && isAdmin && !isStandard)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark px-2" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Admin</a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Admin/SetPassword">Set Password</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center ms-auto">
                        <form class="d-flex me-3" method="get" asp-page="/Search/Index">
                            <input class="form-control me-2" name="q" placeholder="Global search..." aria-label="Search" />
                            <button class="btn btn-outline-secondary" type="submit">Search</button>
                        </form>

                        <div class="d-flex align-items-center">
                            @if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <span class="me-2 align-self-center">Hello @User.Identity.Name</span>
                                <form method="post" asp-page="/Account/Logout" class="d-flex align-items-center m-0">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-secondary btn-sm">Logout</button>
                                </form>
                            }
                            else
                            {
                                <a class="btn btn-primary" asp-page="/Account/Login" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">Login</a>
                            }
                        </div>
                    </div>
                </div>            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Anetta Kochel
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>