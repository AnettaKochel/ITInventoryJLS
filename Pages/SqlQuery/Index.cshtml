@page
@model ITInventoryJLS.Pages.SqlQuery.IndexModel
@{
    ViewData["Title"] = "SQL Query";
}

<h2>SQL Query (SELECT only)</h2>

<form method="post">
    <div class="mb-3">
        <label for="Query" class="form-label">Enter SELECT statement</label>
        <textarea class="form-control" id="Query" name="Query" rows="6">@Model.Query</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Run</button>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
    }
    @if (Model.Columns != null && Model.Columns.Count > 0)
    {
        <div class="table-responsive mt-3">
            <table class="table table-sm table-striped table-dark">
                <thead>
                    <tr>
                        @foreach (var col in Model.Columns)
                        {
                            <th>@col</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model.Rows)
                    {
                        <tr>
                            @foreach (var cell in row)
                            {
                                <td>@cell</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</form>
